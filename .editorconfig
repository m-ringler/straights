###################
# BEGIN csharpier #
###################

[*.{cs,csx}]
# Non-configurable behaviors
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = false

# Configurable behaviors
# end_of_line = lf - there is no 'auto' with an .editorconfig
indent_style = space
indent_size = 4
max_line_length = 80

[*.{config,csproj,props,slnx,targets,xaml,xml}]
indent_style = space
indent_size = 2
max_line_length = 80

#################
# END csharpier #
#################

[*.{ts,tsx,css,html,json,js}]
# Keep these in sync with prettier config in package.json:
# prettier config: singleQuote = true, trailingComma = "es5", tabWidth = 2, printWidth = 80
charset = "utf-8"
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# Verify settings
[*.{received,verified}.{json,txt,xml,html}]
charset = "utf-8-bom"
end_of_line = lf
indent_size = unset
indent_style = unset
tab_width = unset
max_line_length = unset
insert_final_newline = unset
trim_trailing_whitespace = false