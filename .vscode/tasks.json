{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "web: npm ci",
      "type": "shell",
      "command": "npm",
      "args": ["ci"],
      "problemMatcher": []
    },
    {
      "label": "web: npm install",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "problemMatcher": []
    },
    {
      "label": "web: npm upgrade",
      "type": "shell",
      "command": "npx",
      "args": ["npm-check-updates", "-u"],
      "problemMatcher": []
    },
    {
      "label": "nuget: upgrade",
      "type": "shell",
      "command": "dotnet",
      "args": ["nupu"],
      "problemMatcher": []
    },
    {
      "label": "nuget: list outdated (prerelease)",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "list",
        "package",
        "--outdated",
        "--include-prerelease",
        "--format",
        "json"
      ],
      "problemMatcher": []
    },
    {
      "label": "nuget: list outdated (no-prerelease)",
      "type": "shell",
      "command": "dotnet",
      "args": ["list", "package", "--outdated", "--format", "json"],
      "problemMatcher": []
    },
    {
      "label": "web: test",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:run"],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "web: tsc",
      "type": "shell",
      "command": "npm",
      "args": ["run", "tsc"],
      "dependsOn": "web: npm ci",
      "problemMatcher": []
    },
    {
      "label": "straights: build (no-restore, no-tsc)",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "--no-restore",
        "${workspaceFolder}/straights-commandline.slnf",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "straights: build",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "build",
        "${workspaceFolder}/straights-commandline.slnf",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "dependsOn": "web: tsc",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "straights: pack",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "pack",
        "${workspaceFolder}/straights-nuget.slnf",
        "--output",
        "${workspaceFolder}/publish/NuGetPackages",
        "-p:VersionSuffix=beta${input:betaVersionNumber}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "straights: publish",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "publish",
        "${workspaceFolder}/Straights/Straights.csproj",
        "-c",
        "Release",
        "--use-current-runtime"
      ],
      "dependsOn": "web: tsc",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "web: publish",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "publish",
        "${workspaceFolder}/Straights.Web/Straights.Web.csproj",
        "-c",
        "Release",
        "-r",
        "browser-wasm",
        "-p",
        "MSBuildEnableWorkloadResolver=false"
      ],
      "dependsOn": "web: tsc",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "web: publish and run",
      "command": "emrun",
      "group": "build",
      "type": "shell",
      "args": ["${workspaceFolder}/publish/Straights.Web/index.html"],
      "dependsOn": "web: publish",
      "problemMatcher": []
    },
    {
      "label": "web: publish content files",
      "command": "dotnet",
      "type": "shell",
      "group": "build",
      "args": [
        "build",
        "Straights.Web/Straights.Web.csproj",
        "/t:CopyContent",
        "/p:OutputPath=${workspaceFolder}/publish/Straights.Web",
        "--no-restore"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "web: run",
      "command": "emrun",
      "type": "shell",
      "group": "test",
      "args": ["${workspaceFolder}/publish/Straights.Web/index.html"],
      "problemMatcher": []
    },
    {
      "label": "straights: test",
      "command": "dotnet",
      "type": "shell",
      "group": "test",
      "args": ["test"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "straights: test nugets",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "-p:UseStraightsNugetPackagesVersion=${input:nugetVersion}"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "straights: test (no-build)",
      "command": "dotnet",
      "type": "shell",
      "args": ["test", "--no-build"],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "straights: test coverage",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "/p:CollectCoverage=true",
        "/p:CoverletOutputFormat=lcov%2ccobertura",
        "/p:CoverletOutput=${workspaceFolder}/coverage/",
        "/p:ExcludeByAttribute=GeneratedCodeAttribute%2cObsoleteAttribute",
        "/p:ExcludeByFile=**/*.axaml%2c**/*.g.cs"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "verify: accept",
      "type": "shell",
      "command": "dotnet",
      "args": ["verify", "accept", "-y"],
      "problemMatcher": []
    },
    {
      "label": "straights: test coverage report",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "reportgenerator",
        "-reports:${workspaceFolder}/coverage/coverage.info",
        "-targetdir:${workspaceFolder}/coverage/covstats"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "description": "The nuget version to use.",
      "id": "nugetVersion",
      "type": "promptString"
    },
    {
      "description": "The beta version number to use.",
      "id": "betaVersionNumber",
      "type": "promptString"
    }
  ]
}
