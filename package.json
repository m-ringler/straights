{
    "name": "straights",
    "private": true,
    "version": "0.6.20",
    "devDependencies": {
        "@types/jquery": "^3.5.33",
        "@types/serviceworker": "^0.0.167",
        "@edge-runtime/vm": "^5.0.0",
        "@types/node": "^20.0.0",
        "@vitest/ui": "^4.0.14",
        "typescript": "^5.6.0",
        "prettier": "^3.5.3",
        "vitest": "^4.0.14"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "printWidth": 80
    },
    "scripts": {
        "format": "prettier --write \"**/*.{ts,tsx,css,html,json}\"",
        "tsc": "tsc -p tsconfig.json",
        "tsc:watch": "tsc -p tsconfig.json --watch",
        "test": "vitest",
        "test:run": "vitest run",
        "test:debug": "vitest --inspect-brk --no-coverage"
    }
}
